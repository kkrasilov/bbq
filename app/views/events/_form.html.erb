<%= form_for(@event) do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @event} %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :datetime %>
    <p><%= f.datetime_select :datetime, class: 'form-control' %></p>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit t('links.save'), class: 'btn btn-primary' %>
    <%= t('inscription.or') %> <%= link_to t('links.to_return'), :back %>
  </div>
<% end %>
<div class="pt-4">
  <h3><%= t('heading.delete_event') %></h3>
  <%= link_to t('links.delete_event'), event_path(@event),
              data: {confirm: t('questions.are_you_sure')},
              method: :delete, class: 'btn btn-danger' %>
</div>
