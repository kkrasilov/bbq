<h2 class="border-bottom text-dark pb-2">Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @user} %>
  <div class="col-4">
    <div class="form-group">
      <%= f.label :name, 'Имя', class: '' %>
      <%= f.text_field :name, autofocus:true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, 'Пароль' %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      <small class="form-text text-muted"><%= @minimum_password_length %> characters minimum</small>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, 'Подтверждение пароля' %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Зарегистрироватся", class: 'btn btn-primary' %>
    </div>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
